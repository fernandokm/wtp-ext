{
  "version": "0.1",
  "manifest_version": 2,
  "name": "WebTorrent Protocol Handler",
  "description": "Access the WebTorrent Protocol distributed web.",
  "background": {
    "scripts": ["/build/dist.js"]
  },
  "experiment_apis": {
    "protocol": {
      "schema": "libdweb/src/protocol/protocol.json",
      "child": {
        "scopes": ["addon_child"],
        "paths": [["protocol"]],
        "script": "libdweb/src/protocol/client.js"
      },
      "parent": {
        "events": ["startup"],
        "scopes": ["addon_parent"],
        "paths": [["protocol"]],
        "script": "libdweb/src/protocol/host.js"
      }
    }
  }
}
